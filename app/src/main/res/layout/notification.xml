<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:padding="20dip"

  android:layout_width="wrap_content"
    android:background="#FEDBD0"
  android:layout_height="wrap_content"
    android:layout_weight="1"
    android:weightSum="1">


  <TextView
    android:id="@+id/alarm_title_text"
      android:layout_width="match_parent"
    android:layout_height="102dp"
    android:gravity="center"
    android:padding="8dip"
      android:textEditPasteWindowLayout="@id/button"

      android:background="@color/colorPrimary"
      android:text="     IT'S TIME TO
    TAKE MEDICINE!"
      android:textColor="@color/white"
      android:textAppearance="@style/TextAppearance.AppCompat"
      android:layout_weight="1.38" />

  <LinearLayout
      android:orientation="horizontal"
    android:padding="100dip"
      android:layout_width="fill_parent"
    android:layout_height="0dp">

  </LinearLayout>

  <View
      android:layout_width="0dp"
    android:layout_height="220dp"
      android:id="@+id/view"
      android:layout_weight="25.88" />

  <Button
android:id="@+id/dismiss_alarm"

android:layout_width="409dp"
android:layout_height="wrap_content"
android:text="Dismiss"
android:layout_gravity="center"

android:onClick="onDismissClick" />

  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="100dp"
      android:layout_weight="1.45">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="text|textAutoComplete"
        android:text=""
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_weight="1" />
  </LinearLayout>

</LinearLayout>

