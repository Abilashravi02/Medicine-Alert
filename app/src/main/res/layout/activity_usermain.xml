<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEDBD0"
    tools:context="com.example.a91962.medicinealert.UserMainActivity"
    >


    <ImageView
        android:layout_width="140sp"
        android:layout_height="120sp"
        app:srcCompat="@drawable/lo1"
        android:id="@+id/i3"
        tools:ignore="ContentDescription"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/i2"
        android:layout_alignStart="@+id/i2" />

    <TextView
        android:text="Login"
        android:layout_width="wrap_content"
        android:fontFamily="serif"
        android:background="@color/colorAccent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="43dp"
        tools:ignore="HardcodedText"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_below="@+id/i2"
        android:layout_alignLeft="@+id/i3"
        android:layout_alignStart="@+id/i3" />

    <ImageView
        android:id="@+id/i2"
        android:layout_width="140sp"
        android:layout_height="120sp"

        android:src="@drawable/r1"
        tools:ignore="ContentDescription"
        android:background="@android:color/background_light"
        android:layout_marginLeft="109dp"
        android:layout_marginStart="109dp"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Sign up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:id="@+id/textView6"
        android:textAlignment="center"
        android:fontFamily="serif"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText"
        android:layout_marginTop="26dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />


</RelativeLayout>
